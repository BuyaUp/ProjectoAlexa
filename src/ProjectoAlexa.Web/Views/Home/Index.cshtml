@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Media/Imagens/pexels-frans-van-heerden-2699258.jpg" class="d-block w-100" alt="..." style="width:1300px; height:400px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Media/Imagens/matthew-henry-yETqkLnhsUI-unsplash.jpg" class="d-block w-100" alt="..." style="width:1300px; height:400px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Media/Imagens/xps-8pb7Hq539Zw-unsplash.jpg" class="d-block w-100" alt="..." style="width:1300px; height:400px;">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="display-4 rounded p-2" style="background-color:">Candidadaturas abertas para o concurso público 2021</h5>
                <p><a href="@Url.Action("Criar","Conta")" class="btn btn-info">Candidatar-se</a></p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<!--Pesquisar candiadatura-->
<center>
    <div class="row">
        <div class="col-md-12">
            <h5 class="text-center mt-3">Pesquisar candidatura</h5>
            <hr />
        </div>

            <div class="col-md-9 centralizado">
                <form class="form-inline ml-5">
                    <input type="search" class="form-control" placeholder="Número da candidatura..." />
                    <button class="btn btn-info"> <span class="fas fa-search"></span></button>
                </form>
               <hr class="mt-5" />
            </div>


            <div class="col-md-2">
                <h4 class="text-center bg-info rounded text-white p-3">Notícias</h4>
                <hr />
                <div class="card shadow  mt-3">
                    <img class="card-img" src="~/Media/Imagens/xps-kLfkVa_4aXM-unsplash.jpg" />
                    <div class="card-img-overlay text-white">
                        <h5 class="text-center" style="background-color:rgba(0,0,0,0.5)">Já estão abertas as inscrições para o concurso público @DateTime.Now.Year</h5>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-warning" href="@Url.Action("Registar","Conta")"> Saiba mais...</a>
                    </div>
                </div>

                <div class="card shadow mt-3">
                    <img class="card-img" src="~/Media/Imagens/xps-kLfkVa_4aXM-unsplash.jpg" />
                    <div class="card-img-overlay text-white">
                        <h5 class="text-center" style="background-color:rgba(0,0,0,0.5)">Em breve serão anunciadas as datas dos exames...</h5>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-warning" href="#"> Saiba mais...</a>
                    </div>
                </div>
            </div>


    </div>

</center>





